@model ProjetNoelWeb.WebApplication.ViewModels.SquadsViewModel

<section class="sectionSurveys">
    <div class="btnNewSurveyDiv">
        <a asp-controller="Squad" asp-action="" class="orangeRoundedButton">Nouvel évènement</a>
        <a asp-controller="Squads" asp-action="JoinPageSquad" class="orangeRoundedButton" style="align-content:flex-end">Rejoindre un évènement</a>
    </div>

    <h3 class="surveyTitle">Mes évènements</h3>

    <div class="surveys">

        @if (Model?.Squades != null || Model?.Squades?.Count() < 1)
        {
            foreach (var squad in Model.Squades)
            {
                <div class="oneSurvey">
                    <div>
                        <a asp-route-squadId="@squad.Id" asp-controller="listes"> Nom de l'évènement : @squad.Name</a>
                        <h5>Code de l'évènement : @squad.Code</h5>
                    </div>
                    @*<div><a asp-route-squadId="@squad.Id" asp-controller="squads" asp-action="editSquad"><i class="fas fa-edit"></i></a> <a onclick="showPopupDeleteSurvey(@squad.Id)"><i class="fas fa-trash-alt"></i></a></div>*@
                </div>
            }
        }
        else
        {
            <p>Aucun évènement à afficher</p>
        }
    </div>
</section>