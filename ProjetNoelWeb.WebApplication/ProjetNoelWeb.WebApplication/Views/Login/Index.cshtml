@model ProjetNoelWeb.WebApplication.ViewModels.LoginViewModel

<form method="post" asp-action="authenticate" asp-controller="login" class="sectionLogin">
    <h1 class="Title">Projet Liste Noel</h1>

    <p class="errorText">@Model?.ErrorMessage</p>

    <span class="errorText" asp-validation-for="Username"></span>
    <div class="roundedOrangeInput">
        <i class="fa-solid fa-user"></i>
        <input asp-for="@Model.Username" placeholder="Nom d'utilisateur" />
    </div>

    <span class="errorText" asp-validation-for="Password"></span>
    <div class="roundedOrangeInput">
        <i class="fa-solid fa-lock"></i>
        <input type="password" asp-for="@Model.Password" placeholder="Mot de passe" />
    </div>
    <input type="submit" class="orangeRoundedButton" value="Se connecter" />

    <div style="margin-top: 20px; width: 100%; text-align:center" class="spacedButtons">
        <a asp-controller="register" asp-action="" style="background-color:transparent;color:#FF9D0A" class="orangeRoundedButton">S'inscrire</a>
    </div>
</form>